<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingHorizontal="20dp"
    android:background="@color/white"
    android:orientation="vertical"
>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginStart="10dp"
        >
        <ImageButton
            android:id="@+id/btn_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_back"
            android:background="@android:color/transparent"

            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Trở lại"
            android:textSize="17dp"
            android:textStyle="bold"
            android:layout_marginTop="2dp"
            />

    </LinearLayout>


    <TextView
        android:layout_marginTop="50dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Đăng nhập bằng số điện thoại"
        android:textSize="25sp"
        android:textAlignment="center"
        android:textStyle="bold"
        />

    <TextView
        android:id="@+id/tv_phoneLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Phone number"
        android:layout_marginTop="70dp"
        android:layout_marginStart="20dp"
        />

    <EditText
        android:id="@+id/ed_phone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter your phone number"
        android:layout_below="@id/tv_phoneLabel"
        android:background="@drawable/background_edit_text"
        android:layout_marginHorizontal="20dp"
        android:padding="15dp"/>


    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_getOTP"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Get OTP"
        android:layout_below="@id/ed_phone"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/background_button"
        android:textColor="@color/white"
        android:layout_gravity="center"
        />
    <TextView
        android:id="@+id/tv_OTPLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=" OTP"
        android:layout_below="@id/btn_getOTP"
        android:layout_marginTop="20dp"
        android:layout_marginStart="20dp"/> <!-- Điều chỉnh margin bên trái -->


    <EditText
        android:id="@+id/ed_OTP"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter OTP"
        android:layout_below="@id/tv_OTPLabel"
        android:padding="15dp"
        android:layout_marginHorizontal="20dp"
        android:background="@drawable/background_edit_text"
        />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Login"
        android:layout_below="@id/ed_OTP"
        android:background="@drawable/background_button"
        android:textColor="@color/white"
        android:layout_marginTop="20dp"
        android:layout_gravity="center"
        android:layout_centerHorizontal="true"/>

</LinearLayout>
